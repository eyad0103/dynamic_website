<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CYBER SYSTEM v2.0</title>
    <meta name="description" content="Advanced cyber system monitoring dashboard with real-time metrics">
    <link rel="stylesheet" href="/css/style.css?v=1.0.1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Enhanced Cyber Dashboard Styles */
        .dashboard-container {
            min-height: 100vh;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 100%);
            color: #00ff88;
            font-family: 'Courier New', monospace;
            position: relative;
            overflow: hidden;
        }

        .dashboard-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(0, 255, 136, 0.03) 2px, rgba(0, 255, 136, 0.03) 4px, rgba(0, 255, 136, 0.03) 4px),
                repeating-linear-gradient(90deg, transparent, transparent 2px, rgba(0, 255, 136, 0.03) 2px, rgba(0, 255, 136, 0.03) 4px);
            background-size: 50px 50px;
            pointer-events: none;
            z-index: 1;
        }

        .dashboard-header {
            background: rgba(0, 0, 0, 0.9);
            border-bottom: 2px solid #00ff88;
            padding: 1rem 0;
            position: relative;
            z-index: 10;
            backdrop-filter: blur(10px);
        }

        .header-content {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .dashboard-title {
            font-size: 1.8rem;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 3px;
            text-shadow: 0 0 15px #00ff88;
            animation: glow 2s ease-in-out infinite alternate;
        }

        @keyframes glow {
            from { text-shadow: 0 0 15px #00ff88; }
            to { text-shadow: 0 0 25px #00ff88, 0 0 35px #00ff88; }
        }

        .status-indicator {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: rgba(0, 255, 136, 0.1);
            border: 1px solid #00ff88;
            border-radius: 4px;
            font-size: 0.9rem;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            background: #00ff88;
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .dashboard-content {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
            position: relative;
            z-index: 10;
            display: grid;
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .main-terminal {
            background: #000;
            border: 2px solid #00ff88;
            border-radius: 8px;
            padding: 1.5rem;
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
            color: #00ff88;
            min-height: 400px;
            max-height: 500px;
            overflow-y: auto;
            position: relative;
            box-shadow: 0 0 20px rgba(0, 255, 136, 0.3);
        }

        .terminal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-bottom: 1rem;
            border-bottom: 1px solid rgba(0, 255, 136, 0.3);
            margin-bottom: 1rem;
        }

        .terminal-title {
            font-size: 1rem;
            color: #00ff88;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .terminal-stats {
            display: flex;
            gap: 2rem;
            font-size: 0.8rem;
            color: rgba(0, 255, 136, 0.8);
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .stat-label {
            color: rgba(0, 255, 136, 0.6);
            font-size: 0.7rem;
        }

        .stat-value {
            color: #ffffff;
            font-weight: bold;
            text-shadow: 0 0 5px rgba(0, 255, 136, 0.5);
        }

        .terminal-output {
            margin-top: 1rem;
            min-height: 200px;
            max-height: 250px;
            overflow-y: auto;
        }

        .console-line {
            margin-bottom: 0.5rem;
            display: flex;
            align-items: flex-start;
            gap: 0.5rem;
        }

        .console-timestamp {
            color: rgba(0, 255, 136, 0.6);
            font-size: 0.8rem;
            min-width: 80px;
        }

        .console-message {
            color: #00ff88;
            font-size: 0.9rem;
            flex: 1;
        }

        .console-cursor {
            color: #00ff88;
            animation: blink 1s infinite;
        }

        @keyframes blink {
            0%, 50% { opacity: 1; }
            51%, 100% { opacity: 0; }
        }

        .side-panel {
            background: rgba(0, 0, 0, 0.8);
            border: 1px solid #00ff88;
            border-radius: 8px;
            padding: 1.5rem;
        }

        .panel-header {
            color: #00ff88;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid rgba(0, 255, 136, 0.3);
        }

        .system-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }

        .system-item {
            background: rgba(0, 255, 136, 0.05);
            border: 1px solid rgba(0, 255, 136, 0.2);
            border-radius: 4px;
            padding: 1rem;
            transition: all 0.3s ease;
        }

        .system-item:hover {
            background: rgba(0, 255, 136, 0.1);
            border-color: #00ff88;
            transform: translateY(-2px);
        }

        .system-label {
            color: rgba(0, 255, 136, 0.8);
            font-size: 0.8rem;
            margin-bottom: 0.5rem;
        }

        .system-value {
            color: #ffffff;
            font-weight: bold;
            font-size: 1rem;
            text-shadow: 0 0 3px rgba(0, 255, 136, 0.5);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .dashboard-content {
                grid-template-columns: 1fr;
                gap: 1rem;
                padding: 1rem;
            }

            .header-content {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }

            .dashboard-title {
                font-size: 1.5rem;
            }

            .terminal-stats {
                flex-direction: column;
                gap: 1rem;
            }

            .system-grid {
                grid-template-columns: 1fr;
            }

            .main-terminal {
                min-height: 300px;
                max-height: 400px;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <header class="dashboard-header">
            <div class="header-content">
                <h1 class="dashboard-title">
                    <i class="fas fa-shield-alt"></i> CYBER SYSTEM v2.0
                </h1>
                <div class="status-indicator">
                    <div class="status-dot"></div>
                    <span>ONLINE</span>
                </div>
            </div>
        </header>

        <main class="dashboard-content">
            <!-- Main Terminal -->
            <div class="main-terminal">
                <div class="terminal-header">
                    <div class="terminal-title">SYSTEM TERMINAL</div>
                    <div class="terminal-stats">
                        <div class="stat-item">
                            <span class="stat-label">UPTIME:</span>
                            <span class="stat-value" id="uptimeDisplay">--:--</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">MEMORY:</span>
                            <span class="stat-value" id="memoryDisplay">--:--</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">REQUESTS:</span>
                            <span class="stat-value" id="requestsDisplay">--:--</span>
                        </div>
                    </div>
                </div>
                <div class="terminal-output" id="terminalOutput">
                    <!-- Console messages will be added here -->
                </div>
                <div class="terminal-input-area" style="
                    display: flex; 
                    align-items: center; 
                    gap: 0.5rem; 
                    padding: 1rem; 
                    border-top: 1px solid rgba(0, 255, 136, 0.3);
                    margin-top: 1rem;
                ">
                    <input type="text" id="terminalInput" placeholder="Enter command..." style="
                        background: transparent; 
                        border: 1px solid #00ff88; 
                        color: #00ff88; 
                        padding: 0.5rem; 
                        font-family: 'Courier New', monospace; 
                        font-size: 0.9rem; 
                        outline: none; 
                        flex: 1; 
                        border-radius: 4px; 
                        width: 100%;
                    " onkeypress="handleTerminalKey(event)">
                    <span id="terminalCursor" style="color: #00ff88;">_</span>
                </div>
            </div>

            <!-- Side Panel -->
            <div class="side-panel">
                <div class="panel-header">SYSTEM METRICS</div>
                <div class="system-grid">
                    <div class="system-item">
                        <div class="system-label">Node Version</div>
                        <div class="system-value"><%= systemInfo.nodeVersion %></div>
                    </div>
                    <div class="system-item">
                        <div class="system-label">Platform</div>
                        <div class="system-value"><%= systemInfo.platform %></div>
                    </div>
                    <div class="system-item">
                        <div class="system-label">Process ID</div>
                        <div class="system-value"><%= systemInfo.pid %></div>
                    </div>
                    <div class="system-item">
                        <div class="system-label">Server Time</div>
                        <div class="system-value" id="serverTimeDisplay">--:--</div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        // Enhanced cyber system with interactive terminal
        let requestCount = <%= totalRequests %>;
        let systemData = {
            uptime: '<%= serverUptime %>',
            memory: <%= JSON.stringify(systemInfo.memory) %>,
            nodeVersion: '<%= systemInfo.nodeVersion %>',
            platform: '<%= systemInfo.platform %>',
            pid: <%= systemInfo.pid %>
        };
        let commandHistory = [];
        let historyIndex = 0;
        
        document.addEventListener('DOMContentLoaded', function() {
            const terminalOutput = document.getElementById('terminalOutput');
            const terminalInput = document.getElementById('terminalInput');
            const uptimeDisplay = document.getElementById('uptimeDisplay');
            const memoryDisplay = document.getElementById('memoryDisplay');
            const requestsDisplay = document.getElementById('requestsDisplay');
            const serverTimeDisplay = document.getElementById('serverTimeDisplay');
            
            // Initialize displays
            updateDisplays();
            
            // System boot sequence
            const bootSequence = [
                'SYSTEM INITIALIZING...',
                'LOADING CYBER MODULES...',
                'ESTABLISHING SECURE CONNECTION...',
                'SYSTEM READY'
            ];
            
            let messageIndex = 0;
            function typeMessage(message, callback) {
                let charIndex = 0;
                const typeInterval = setInterval(() => {
                    if (charIndex < message.length) {
                        addConsoleLine(`[SYSTEM] ${message[charIndex]}`);
                        charIndex++;
                    } else {
                        clearInterval(typeInterval);
                        if (callback) callback();
                    }
                }, 30);
            }
            
            function startBootSequence() {
                if (messageIndex < bootSequence.length) {
                    typeMessage(bootSequence[messageIndex], () => {
                        messageIndex++;
                        setTimeout(startBootSequence, 500);
                    });
                } else {
                    // Start live monitoring
                    startLiveMonitoring();
                }
            }
            
            function addConsoleLine(message, type = 'system') {
                const lineElement = document.createElement('div');
                lineElement.className = 'console-line';
                lineElement.innerHTML = `
                    <span class="console-timestamp">${new Date().toLocaleTimeString()}</span>
                    <span class="console-message">${message}</span>
                    <span class="console-cursor">_</span>
                `;
                terminalOutput.appendChild(lineElement);
                terminalOutput.scrollTop = terminalOutput.scrollHeight;
            }
            
            function updateDisplays() {
                if (uptimeDisplay) uptimeDisplay.textContent = systemData.uptime;
                if (memoryDisplay) {
                    const memory = JSON.parse(systemData.memory);
                    memoryDisplay.textContent = `${Math.round(memory.heapUsed / 1024 / 1024)}MB / ${Math.round(memory.heapTotal / 1024 / 1024)}MB`;
                }
                if (requestsDisplay) requestsDisplay.textContent = requestCount;
                if (serverTimeDisplay) serverTimeDisplay.textContent = new Date().toLocaleTimeString();
            }
            
            function startLiveMonitoring() {
                // Add periodic system messages
                setInterval(() => {
                    const messages = [
                        'Scanning network traffic...',
                        'Monitoring system resources...',
                        'Updating security protocols...',
                        'Syncing with main server...',
                        'Analyzing data patterns...',
                        'Optimizing performance metrics...'
                    ];
                    const randomMessage = messages[Math.floor(Math.random() * messages.length)];
                    addConsoleLine(randomMessage, 'system');
                }, 3000);
                
                // Update metrics periodically
                setInterval(() => {
                    fetch('/api/system/stats')
                        .then(response => response.json())
                        .then(data => {
                            // Update local data
                            systemData = {
                                uptime: data.uptime,
                                memory: data.memory,
                                nodeVersion: data.system.nodeVersion,
                                platform: data.system.platform,
                                pid: data.system.pid
                            };
                            
                            // Update displays
                            updateDisplays();
                            
                            // Add memory warning if needed
                            const memory = JSON.parse(data.memory);
                            const memoryUsage = (memory.heapUsed / memory.heapTotal) * 100;
                            if (memoryUsage > 80) {
                                addConsoleLine('WARNING: Memory usage critical!', 'warning');
                            }
                        })
                        .catch(error => {
                            addConsoleLine(`ERROR: Failed to fetch system stats - ${error.message}`, 'error');
                        });
                }, 2000);
                
                // Simulate incoming requests
                setInterval(() => {
                    requestCount++;
                    updateDisplays();
                }, 5000);
            }
            
            // Terminal input handling
            function handleTerminalKey(event) {
                const key = event.key;
                const input = terminalInput.value.trim();
                
                if (key === 'Enter') {
                    if (input) {
                        // Add to history and execute command
                        commandHistory.push(input);
                        historyIndex = commandHistory.length;
                        
                        // Add command to console
                        addConsoleLine(`> ${input}`, 'user');
                        
                        // Execute command and update displays
                        const result = executeCommand(input);
                        if (result.type !== 'error') {
                            addConsoleLine(result.output, 'system');
                            
                            // Update displays if command affects them
                            if (result.type === 'status' || result.type === 'uptime' || result.type === 'memory' || result.type === 'time' || result.type === 'requests') {
                                updateDisplays();
                            }
                        }
                        
                        terminalInput.value = '';
                    }
                } else if (key === 'Backspace') {
                    terminalInput.value = terminalInput.value.slice(0, -1);
                } else if (key === 'ArrowUp') {
                    if (historyIndex > 0) {
                        historyIndex--;
                        terminalInput.value = commandHistory[historyIndex] || '';
                    }
                } else if (key === 'ArrowDown') {
                    if (historyIndex < commandHistory.length - 1) {
                        historyIndex++;
                        terminalInput.value = commandHistory[historyIndex] || '';
                    }
                }
            }
            
            // Add keyboard event listener
            terminalInput.addEventListener('keydown', handleTerminalKey);
            
            // Start the experience
            setTimeout(startBootSequence, 1000);
        });
    </script>
</body>
</html>
