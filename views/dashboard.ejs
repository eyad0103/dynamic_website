<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Error Analysis Dashboard</title>
    <meta name="description" content="AI-powered app error analysis and monitoring dashboard">
    <link rel="stylesheet" href="/css/style.css?v=1.0.1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Error Dashboard Styles */
        .dashboard-container {
            min-height: 100vh;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 100%);
            color: #00ff88;
            font-family: 'Courier New', monospace;
            position: relative;
            overflow: hidden;
        }

        .dashboard-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(0, 255, 136, 0.03) 2px, rgba(0, 255, 136, 0.03) 4px),
                repeating-linear-gradient(90deg, transparent, transparent 2px, rgba(0, 255, 136, 0.03) 2px, rgba(0, 255, 136, 0.03) 4px);
            background-size: 50px 50px;
            pointer-events: none;
            z-index: 1;
        }

        .dashboard-header {
            background: rgba(0, 0, 0, 0.9);
            border-bottom: 2px solid #00ff88;
            padding: 1rem 0;
            position: relative;
            z-index: 10;
            backdrop-filter: blur(10px);
        }

        .header-content {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .dashboard-title {
            font-size: 1.8rem;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 3px;
            text-shadow: 0 0 15px #00ff88;
            animation: glow 2s ease-in-out infinite alternate;
        }

        @keyframes glow {
            from { text-shadow: 0 0 15px #00ff88; }
            to { text-shadow: 0 0 25px #00ff88, 0 0 35px #00ff88; }
        }

        .status-indicator {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: rgba(0, 255, 136, 0.1);
            border: 1px solid #00ff88;
            border-radius: 4px;
            font-size: 0.9rem;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            background: #00ff88;
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .error-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: rgba(0, 20, 40, 0.8);
            border: 1px solid rgba(0, 255, 136, 0.3);
            border-radius: 8px;
            padding: 1.5rem;
            position: relative;
            backdrop-filter: blur(5px);
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            border-color: #00ff88;
            box-shadow: 0 0 20px rgba(0, 255, 136, 0.3);
            transform: translateY(-2px);
        }

        .stat-label {
            font-size: 0.8rem;
            color: #00ff88;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 0.5rem;
            opacity: 0.8;
        }

        .stat-value {
            font-size: 1.8rem;
            font-weight: bold;
            color: #ffffff;
            text-shadow: 0 0 5px rgba(0, 255, 136, 0.5);
        }

        .error-list {
            background: rgba(0, 0, 0, 0.8);
            border: 1px solid #00ff88;
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .error-list-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid rgba(0, 255, 136, 0.3);
        }

        .error-list-title {
            font-size: 1.2rem;
            color: #00ff88;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .error-filters {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        .filter-input {
            background: transparent;
            border: 1px solid rgba(0, 255, 136, 0.3);
            color: #00ff88;
            padding: 0.5rem;
            border-radius: 4px;
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
            outline: none;
        }

        .filter-input:focus {
            border-color: #00ff88;
            box-shadow: 0 0 10px rgba(0, 255, 136, 0.3);
        }

        .error-item {
            background: rgba(0, 255, 136, 0.05);
            border: 1px solid rgba(0, 255, 136, 0.2);
            border-radius: 4px;
            padding: 1rem;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .error-item:hover {
            background: rgba(0, 255, 136, 0.1);
            border-color: #00ff88;
            transform: translateX(5px);
        }

        .error-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 0.5rem;
        }

        .error-app-name {
            font-size: 1.1rem;
            color: #ffffff;
            font-weight: bold;
        }

        .error-timestamp {
            font-size: 0.8rem;
            color: rgba(0, 255, 136, 0.6);
        }

        .error-status {
            display: inline-block;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 0.5rem;
        }

        .status-pending {
            background: rgba(255, 193, 7, 0.2);
            color: #ffc107;
            border: 1px solid rgba(255, 193, 7, 0.3);
        }

        .status-analyzed {
            background: rgba(40, 167, 69, 0.2);
            color: #28a745;
            border: 1px solid rgba(40, 167, 69, 0.3);
        }

        .status-failed {
            background: rgba(220, 53, 69, 0.2);
            color: #dc3545;
            border: 1px solid rgba(220, 53, 69, 0.3);
        }

        .error-message {
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
            font-family: 'Courier New', monospace;
            background: rgba(0, 0, 0, 0.3);
            padding: 0.5rem;
            border-radius: 4px;
            border-left: 3px solid #00ff88;
        }

        .error-ai-explanation {
            color: #00ff88;
            font-size: 0.9rem;
            line-height: 1.4;
            background: rgba(0, 255, 136, 0.05);
            padding: 0.5rem;
            border-radius: 4px;
            border-left: 3px solid #00ff88;
            margin-top: 0.5rem;
        }

        .no-errors {
            text-align: center;
            color: rgba(0, 255, 136, 0.6);
            font-size: 1.1rem;
            padding: 2rem;
        }

        .loading {
            text-align: center;
            color: #00ff88;
            font-size: 1.1rem;
            padding: 2rem;
        }

        .refresh-btn {
            background: transparent;
            border: 1px solid #00ff88;
            color: #00ff88;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            font-family: 'Courier New', monospace;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .refresh-btn:hover {
            background: rgba(0, 255, 136, 0.1);
            box-shadow: 0 0 10px rgba(0, 255, 136, 0.3);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }

            .dashboard-title {
                font-size: 1.5rem;
            }

            .error-stats {
                grid-template-columns: 1fr;
            }

            .error-filters {
                flex-direction: column;
                width: 100%;
            }

            .filter-input {
                width: 100%;
            }

            .error-header {
                flex-direction: column;
                gap: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <header class="dashboard-header">
            <div class="header-content">
                <h1 class="dashboard-title">
                    <i class="fas fa-brain"></i> AI Error Analysis Dashboard
                </h1>
                <div class="status-indicator">
                    <div class="status-dot"></div>
                    <span>MONITORING</span>
                </div>
            </div>
        </header>

        <main class="dashboard-content">
            <!-- Error Statistics -->
            <div class="error-stats">
                <div class="stat-card">
                    <div class="stat-label">Total Errors</div>
                    <div class="stat-value" id="totalErrors">0</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Pending Analysis</div>
                    <div class="stat-value" id="pendingErrors">0</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Analyzed</div>
                    <div class="stat-value" id="analyzedErrors">0</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Failed Analysis</div>
                    <div class="stat-value" id="failedErrors">0</div>
                </div>
            </div>

            <!-- Error List -->
            <div class="error-list">
                <div class="error-list-header">
                    <div class="error-list-title">Recent Errors</div>
                    <div class="error-filters">
                        <input type="text" id="searchInput" class="filter-input" placeholder="Search errors...">
                        <button id="refreshBtn" class="refresh-btn">
                            <i class="fas fa-sync-alt"></i> Refresh
                        </button>
                    </div>
                </div>
                <div id="errorContainer">
                    <div class="loading">Loading errors...</div>
                </div>
            </div>
        </main>
    </div>

    <script>
        // AI Error Analysis Dashboard
        let errors = [];
        let filteredErrors = [];
        
        document.addEventListener('DOMContentLoaded', function() {
            const errorContainer = document.getElementById('errorContainer');
            const searchInput = document.getElementById('searchInput');
            const refreshBtn = document.getElementById('refreshBtn');
            const totalErrorsEl = document.getElementById('totalErrors');
            const pendingErrorsEl = document.getElementById('pendingErrors');
            const analyzedErrorsEl = document.getElementById('analyzedErrors');
            const failedErrorsEl = document.getElementById('failedErrors');
            
            // Load initial errors
            loadErrors();
            
            // Auto-refresh every 30 seconds
            setInterval(loadErrors, 30000);
            
            // Search functionality
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                filteredErrors = errors.filter(error => 
                    error.appName.toLowerCase().includes(searchTerm) ||
                    error.error.toLowerCase().includes(searchTerm) ||
                    error.userInfo.toLowerCase().includes(searchTerm)
                );
                renderErrors();
            });
            
            // Refresh button
            refreshBtn.addEventListener('click', function() {
                this.disabled = true;
                this.innerHTML = '<i class="fas fa-sync-alt fa-spin"></i> Refreshing...';
                loadErrors().finally(() => {
                    this.disabled = false;
                    this.innerHTML = '<i class="fas fa-sync-alt"></i> Refresh';
                });
            });
            
            function loadErrors() {
                return fetch('/api/errors')
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            errors = data.errors;
                            filteredErrors = errors;
                            renderErrors();
                            updateStats();
                        } else {
                            throw new Error(data.error || 'Failed to load errors');
                        }
                    })
                    .catch(error => {
                        console.error('Error loading errors:', error);
                        errorContainer.innerHTML = '<div class="no-errors">Failed to load errors. Please try again.</div>';
                    });
            }
            
            function renderErrors() {
                if (filteredErrors.length === 0) {
                    errorContainer.innerHTML = '<div class="no-errors">No errors found.</div>';
                    return;
                }
                
                errorContainer.innerHTML = filteredErrors.map(error => `
                    <div class="error-item" data-id="${error.id}">
                        <div class="error-header">
                            <div class="error-app-name">${escapeHtml(error.appName)}</div>
                            <div class="error-timestamp">${formatDate(error.timestamp)}</div>
                        </div>
                        <div class="error-status status-${error.status}">${getStatusText(error.status)}</div>
                        <div class="error-message">${escapeHtml(error.error)}</div>
                        ${error.aiExplanation ? `<div class="error-ai-explanation">${escapeHtml(error.aiExplanation)}</div>` : ''}
                        ${error.userInfo ? `<div style="color: rgba(0, 255, 136, 0.6); font-size: 0.8rem; margin-top: 0.5rem;">User: ${escapeHtml(error.userInfo)}</div>` : ''}
                    </div>
                `).join('');
            }
            
            function updateStats() {
                const total = errors.length;
                const pending = errors.filter(e => e.status === 'pending_analysis').length;
                const analyzed = errors.filter(e => e.status === 'analyzed').length;
                const failed = errors.filter(e => e.status === 'analysis_failed').length;
                
                totalErrorsEl.textContent = total;
                pendingErrorsEl.textContent = pending;
                analyzedErrorsEl.textContent = analyzed;
                failedErrorsEl.textContent = failed;
            }
            
            function escapeHtml(text) {
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }
            
            function formatDate(timestamp) {
                const date = new Date(timestamp);
                return date.toLocaleString();
            }
            
            function getStatusText(status) {
                switch (status) {
                    case 'pending_analysis': return 'Pending Analysis';
                    case 'analyzed': return 'Analyzed';
                    case 'analysis_failed': return 'Analysis Failed';
                    default: return 'Unknown';
                }
            }
        });
    </script>
</body>
</html>
