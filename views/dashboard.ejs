<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <meta name="description" content="Cyber system dashboard monitoring server status and metrics">
    <link rel="stylesheet" href="/css/style.css?v=1.0.1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Cyber Dashboard Styles */
        .dashboard-container {
            min-height: 100vh;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 100%);
            color: #00ff88;
            font-family: 'Courier New', monospace;
            position: relative;
            overflow: hidden;
        }

        .dashboard-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(0, 255, 136, 0.03) 2px, rgba(0, 255, 136, 0.03) 4px),
                repeating-linear-gradient(90deg, transparent, transparent 2px, rgba(0, 255, 136, 0.03) 2px, rgba(0, 255, 136, 0.03) 4px);
            background-size: 50px 50px;
            pointer-events: none;
            z-index: 1;
        }

        .dashboard-header {
            background: rgba(0, 0, 0, 0.8);
            border-bottom: 2px solid #00ff88;
            padding: 1rem 0;
            position: relative;
            z-index: 10;
            backdrop-filter: blur(10px);
        }

        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .dashboard-title {
            font-size: 1.8rem;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-shadow: 0 0 10px #00ff88;
            animation: glow 2s ease-in-out infinite alternate;
        }

        @keyframes glow {
            from { text-shadow: 0 0 10px #00ff88; }
            to { text-shadow: 0 0 20px #00ff88, 0 0 30px #00ff88; }
        }

        .status-indicator {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: rgba(0, 255, 136, 0.1);
            border: 1px solid #00ff88;
            border-radius: 4px;
            font-size: 0.9rem;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            background: #00ff88;
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        @keyframes fadeIn {
            from { 
                opacity: 0; 
                transform: translateY(10px); 
            }
            to { 
                opacity: 1; 
                transform: translateY(0); 
            }
        }

        .dashboard-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
            position: relative;
            z-index: 10;
        }

        .metrics-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .metric-card {
            background: rgba(0, 20, 40, 0.8);
            border: 1px solid rgba(0, 255, 136, 0.3);
            border-radius: 8px;
            padding: 1.5rem;
            position: relative;
            backdrop-filter: blur(5px);
            transition: all 0.3s ease;
        }

        .metric-card:hover {
            border-color: #00ff88;
            box-shadow: 0 0 20px rgba(0, 255, 136, 0.3);
            transform: translateY(-2px);
        }

        .metric-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, transparent, #00ff88, transparent);
            animation: scan 3s linear infinite;
        }

        @keyframes scan {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }

        .metric-label {
            font-size: 0.8rem;
            color: #00ff88;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 0.5rem;
            opacity: 0.8;
        }

        .metric-value {
            font-size: 1.8rem;
            font-weight: bold;
            color: #ffffff;
            text-shadow: 0 0 5px rgba(0, 255, 136, 0.5);
        }

        .metric-unit {
            font-size: 0.9rem;
            color: #00ff88;
            opacity: 0.7;
            margin-left: 0.5rem;
        }

        .system-info {
            background: rgba(0, 20, 40, 0.8);
            border: 1px solid rgba(0, 255, 136, 0.3);
            border-radius: 8px;
            padding: 1.5rem;
            backdrop-filter: blur(5px);
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
            margin-top: 1rem;
        }

        .info-item {
            display: flex;
            justify-content: space-between;
            padding: 0.5rem 0;
            border-bottom: 1px solid rgba(0, 255, 136, 0.1);
        }

        .info-label {
            color: #00ff88;
            font-size: 0.9rem;
            opacity: 0.8;
        }

        .info-value {
            color: #ffffff;
            font-weight: bold;
        }

        .nav-link {
            color: #00ff88;
            text-decoration: none;
            padding: 0.5rem 1rem;
            border: 1px solid rgba(0, 255, 136, 0.3);
            border-radius: 4px;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            background: rgba(0, 255, 136, 0.1);
            border-color: #00ff88;
            box-shadow: 0 0 10px rgba(0, 255, 136, 0.3);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }

            .dashboard-title {
                font-size: 1.5rem;
            }

            .metrics-grid {
                grid-template-columns: 1fr;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }

            .dashboard-content {
                padding: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <header class="dashboard-header">
            <div class="header-content">
                <h1 class="dashboard-title">
                    <i class="fas fa-desktop"></i> System Dashboard
                </h1>
                <div class="status-indicator">
                    <div class="status-dot"></div>
                    <span><%= serverStatus %></span>
                </div>
            </div>
        </header>

        <main class="dashboard-content">
            <div class="metrics-grid">
                <div class="metric-card">
                    <div class="metric-label">Server Uptime</div>
                    <div class="metric-value">
                        <%= serverUptime %>
                    </div>
                </div>

                <div class="metric-card">
                    <div class="metric-label">Total Requests</div>
                    <div class="metric-value">
                        <%= totalRequests %>
                    </div>
                </div>

                <div class="metric-card">
                    <div class="metric-label">Server Time</div>
                    <div class="metric-value">
                        <%= new Date(serverTime).toLocaleTimeString() %>
                    </div>
                </div>
            </div>

            <div class="system-info">
                <div class="metric-label">System Information</div>
                <div class="info-grid">
                    <div class="info-item">
                        <span class="info-label">Node Version</span>
                        <span class="info-value"><%= systemInfo.nodeVersion %></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Platform</span>
                        <span class="info-value"><%= systemInfo.platform %></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Process ID</span>
                        <span class="info-value"><%= systemInfo.pid %></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Memory Usage</span>
                        <span class="info-value"><%= Math.round(systemInfo.memory.rss / 1024 / 1024) %>MB</span>
                    </div>
                </div>
            </div>

            <!-- Cyber Console -->
            <div class="system-info" style="margin-top: 2rem;">
                <div class="metric-label">System Console</div>
                <div class="console-container" id="cyberConsole" style="
                    background: #000;
                    border: 1px solid #00ff88;
                    border-radius: 4px;
                    padding: 1rem;
                    font-family: 'Courier New', monospace;
                    font-size: 0.9rem;
                    color: #00ff88;
                    min-height: 200px;
                    max-height: 300px;
                    overflow-y: auto;
                    position: relative;
                ">
                    <div id="consoleOutput" style="margin-bottom: 1rem;"></div>
                    <div style="display: flex; align-items: center; gap: 0.5rem;">
                        <span id="typingIndicator" style="color: #00ff88;">â–¸</span>
                        <span id="consoleInput" style="color: #ffffff; opacity: 0.7;">SYSTEM READY</span>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        // System monitoring and cyber effects
        let requestCount = <%= totalRequests %>;
        
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize console
            const consoleOutput = document.getElementById('consoleOutput');
            const typingIndicator = document.getElementById('typingIndicator');
            const consoleInput = document.getElementById('consoleInput');
            
            // Simulate system boot sequence
            const bootMessages = [
                'SYSTEM BOOT INITIALIZED...',
                'LOADING CYBER MODULES...',
                'ESTABLISHING SECURE CONNECTION...',
                'SYSTEM READY'
            ];
            
            let messageIndex = 0;
            function typeMessage(message, callback) {
                let charIndex = 0;
                typingIndicator.style.display = 'inline-block';
                consoleInput.textContent = '';
                
                const typeInterval = setInterval(() => {
                    if (charIndex < message.length) {
                        consoleInput.textContent += message[charIndex];
                        charIndex++;
                    } else {
                        clearInterval(typeInterval);
                        typingIndicator.style.display = 'none';
                        if (callback) callback();
                    }
                }, 50);
            }
            
            function addConsoleMessage(message, type = 'system') {
                const messageElement = document.createElement('div');
                messageElement.style.cssText = `
                    margin-bottom: 0.5rem;
                    padding: 0.25rem 0.5rem;
                    background: rgba(0, 255, 136, 0.1);
                    border-left: 2px solid #00ff88;
                    color: ${type === 'system' ? '#00ff88' : '#ffffff'};
                    font-size: 0.8rem;
                    animation: fadeIn 0.3s ease;
                `;
                messageElement.textContent = `[${new Date().toLocaleTimeString()}] ${message}`;
                consoleOutput.appendChild(messageElement);
                consoleOutput.scrollTop = consoleOutput.scrollHeight;
            }
            
            // Start boot sequence
            function startBootSequence() {
                if (messageIndex < bootMessages.length) {
                    typeMessage(bootMessages[messageIndex], () => {
                        messageIndex++;
                        setTimeout(startBootSequence, 1000);
                    });
                } else {
                    // Start live monitoring
                    startLiveMonitoring();
                }
            }
            
            function startLiveMonitoring() {
                // Add periodic system messages
                setInterval(() => {
                    const messages = [
                        'Scanning network traffic...',
                        'Monitoring system resources...',
                        'Updating security protocols...',
                        'Syncing with main server...'
                    ];
                    const randomMessage = messages[Math.floor(Math.random() * messages.length)];
                    addConsoleMessage(randomMessage, 'system');
                }, 5000);
                
                // Update metrics periodically
                setInterval(() => {
                    updateMetrics();
                }, 2000);
            }
            
            function updateMetrics() {
                // Fetch latest system stats
                fetch('/api/system/stats')
                    .then(response => response.json())
                    .then(data => {
                        const uptimeElement = document.querySelector('.metric-value');
                        if (uptimeElement && uptimeElement[0]) {
                            uptimeElement[0].textContent = data.uptime;
                        }
                        
                        const memoryElement = document.querySelectorAll('.metric-value')[1];
                        if (memoryElement) {
                            memoryElement.textContent = data.memory.heapUsed + 'MB';
                        }
                        
                        const requestsElement = document.querySelectorAll('.metric-value')[2];
                        if (requestsElement) {
                            requestsElement.textContent = data.requests;
                        }
                    })
                    .catch(error => {
                        console.error('Error fetching system stats:', error);
                    });
            }
            
            // Add hover effects to cards
            const cards = document.querySelectorAll('.metric-card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transition = 'all 0.1s ease';
                    this.style.boxShadow = '0 0 25px rgba(0, 255, 136, 0.5)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.boxShadow = '0 0 20px rgba(0, 255, 136, 0.3)';
                });
            });
            
            // Start the experience
            setTimeout(startBootSequence, 1000);
        });
    </script>
</body>
</html>
