    <script>
        // Phase 1: API Key System Implementation
        let currentTab = 'errors';
        let errors = [];
        let filteredErrors = [];
        
        // Notification System
        function showNotification(type, title, message) {
            const container = document.getElementById('notificationContainer');
            const notification = document.createElement('div');
            notification.className = `notification notification-${type}`;
            
            notification.innerHTML = `
                <div style="font-weight: bold; margin-bottom: 0.5rem;">${title}</div>
                <div style="font-size: 0.9rem;">${message}</div>
            `;
            
            container.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 5000);
        }
        
        // Tab Switching
        function switchTab(tabName, event) {
            // Hide all tabs
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Remove active class from all buttons
            document.querySelectorAll('.tab-button').forEach(button => {
                button.classList.remove('active');
            });
            
            // Show selected tab
            const targetTab = document.getElementById(tabName + '-tab');
            if (targetTab) {
                targetTab.classList.add('active');
            }
            
            // Add active class to clicked button
            if (event && event.target) {
                event.target.classList.add('active');
            }
            
            currentTab = tabName;
            
            // Tab-specific actions
            if (tabName === 'api') {
                checkApiStatus();
            } else if (tabName === 'version') {
                updateVersionDetails();
            } else if (tabName === 'registered-pcs') {
                setTimeout(() => {
                    refreshPcList();
                }, 1000);
            }
            
            showNotification('info', 'Tab Switched', `Switched to ${tabName} tab`);
        }
        
        // Error Management Functions
        function loadErrors() {
            return fetch('/api/errors')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        errors = data.errors || [];
                        filteredErrors = errors;
                        renderErrors();
                        updateStats();
                    } else {
                        throw new Error(data.error || 'Failed to load errors');
                    }
                })
                .catch(error => {
                    console.error('Error loading errors:', error);
                    const errorContainer = document.getElementById('errorContainer');
                    if (errorContainer) {
                        errorContainer.innerHTML = '<div class="loading">Failed to load errors. Please try again.</div>';
                    }
                });
        }
        
        function renderErrors() {
            const errorContainer = document.getElementById('errorContainer');
            if (!errorContainer) return;
            
            if (filteredErrors.length === 0) {
                errorContainer.innerHTML = '<div class="loading">No errors found.</div>';
                return;
            }
            
            errorContainer.innerHTML = filteredErrors.map(error => `
                <div class="error-item" data-id="${error.id}">
                    <div class="error-header">
                        <div class="error-app-name">${error.appName || 'Unknown'}</div>
                        <div class="error-timestamp">${error.timestamp ? new Date(error.timestamp).toLocaleString() : 'Unknown'}</div>
                    </div>
                    <div class="error-status status-${error.status || 'pending'}">${error.status || 'Pending'}</div>
                    <div class="error-message">${error.error || 'No message'}</div>
                </div>
            `).join('');
        }
        
        function updateStats() {
            // Stats will be updated when errors are loaded
        }
        
        // PC Management Functions
        function createPC() {
            const pcName = document.getElementById('pcName').value;
            const pcLocation = document.getElementById('pcLocation').value;
            const pcOwner = document.getElementById('pcOwner').value;
            const pcType = document.getElementById('pcType').value;
            const pcDescription = document.getElementById('pcDescription').value;
            
            if (!pcName || !pcLocation || !pcOwner) {
                showNotification('error', 'PC Creation Error', 'Please fill in all required fields');
                return;
            }
            
            showNotification('info', 'Creating PC', 'Generating PC credentials...');
            
            fetch('/api/create-pc', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    pcName,
                    pcLocation,
                    pcOwner,
                    pcType,
                    pcDescription
                })
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    showNotification('success', 'PC Created Successfully', `${pcName} created. Waiting for agent to connect...`);
                    
                    // Clear form
                    document.getElementById('pcName').value = '';
                    document.getElementById('pcLocation').value = '';
                    document.getElementById('pcOwner').value = '';
                    document.getElementById('pcType').value = '';
                    document.getElementById('pcDescription').value = '';
                    
                    // Refresh PC list
                    loadPcList();
                } else {
                    showNotification('error', 'PC Creation Failed', result.error || 'Unknown error occurred');
                }
            })
            .catch(error => {
                console.error('PC creation error:', error);
                showNotification('error', 'PC Creation Failed', 'Failed to create PC');
            });
        }
        
        function connectAgent() {
            showNotification('info', 'Agent Connection', 'This feature will be available in Phase 2');
        }
        
        function loadPcList() {
            fetch('/api/pcs')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        updatePcListDisplay(data.pcs || []);
                    } else {
                        showNotification('error', 'PC List Error', 'Failed to load PC list');
                    }
                })
                .catch(error => {
                    console.error('PC list error:', error);
                    showNotification('error', 'PC List Error', 'Failed to load PC list');
                });
        }
        
        function updatePcListDisplay(pcs) {
            const tbody = document.getElementById('pcTableBody');
            if (!tbody) return;
            
            tbody.innerHTML = '';
            
            if (pcs.length === 0) {
                tbody.innerHTML = '<tr><td colspan="5" style="padding: 2rem; text-align: center; color: rgba(255, 255, 255, 0.6);">No PCs created yet. Use CREATE PC tab to add your first PC.</td></tr>';
                return;
            }
            
            pcs.forEach(pc => {
                const row = document.createElement('tr');
                row.style.cssText = 'border-bottom: 1px solid rgba(0, 255, 136, 0.1);';
                row.innerHTML = `
                    <td style="padding: 0.75rem; color: #00ff88;">${pc.name || 'Unknown'}</td>
                    <td style="padding: 0.75rem;">
                        <span style="color: ${pc.status === 'ONLINE' ? '#28a745' : '#dc3545'};">
                            ${pc.status || 'UNKNOWN'}
                        </span>
                    </td>
                    <td style="padding: 0.75rem; color: rgba(255, 255, 255, 0.6);">${pc.location || 'Unknown'}</td>
                    <td style="padding: 0.75rem; color: rgba(255, 255, 255, 0.6);">${pc.owner || 'Unknown'}</td>
                    <td style="padding: 0.75rem; color: rgba(255, 255, 255, 0.6);">${pc.createdAt ? new Date(pc.createdAt).toLocaleString() : 'Unknown'}</td>
                `;
                tbody.appendChild(row);
            });
        }
        
        function refreshPcList() {
            loadPcList();
        }
        
        // Version Functions
        function updateVersionDetails() {
            const lastUpdated = document.getElementById('lastUpdated');
            const performanceMetrics = document.getElementById('performanceMetrics');
            
            if (lastUpdated) {
                lastUpdated.textContent = new Date().toLocaleString();
            }
            
            if (performanceMetrics) {
                performanceMetrics.textContent = 'Optimized and responsive';
            }
        }
        
        // Chat Functions
        function sendMessage() {
            const chatInput = document.getElementById('chatInput');
            const chatMessages = document.getElementById('chatMessages');
            const message = chatInput.value.trim();
            
            if (!message) return;
            
            // Add user message
            const userMessage = document.createElement('div');
            userMessage.className = 'chat-message user-message';
            userMessage.innerHTML = `
                <div class="message-header">
                    <div class="message-sender">You</div>
                    <div class="message-time">${new Date().toLocaleTimeString()}</div>
                </div>
                <div class="message-content">${message}</div>
            `;
            chatMessages.appendChild(userMessage);
            
            // Clear input
            chatInput.value = '';
            
            // Scroll to bottom
            const chatContainer = document.getElementById('chatContainer');
            if (chatContainer) {
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }
            
            // Send to AI (placeholder for now)
            setTimeout(() => {
                const aiMessage = document.createElement('div');
                aiMessage.className = 'chat-message ai-message';
                aiMessage.innerHTML = `
                    <div class="message-header">
                        <div class="message-sender">AI Error Analysis Specialist</div>
                        <div class="message-time">${new Date().toLocaleTimeString()}</div>
                    </div>
                    <div class="message-content">I understand your question: "${message}". This feature will be fully implemented in Phase 2 with real AI integration.</div>
                `;
                chatMessages.appendChild(aiMessage);
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }, 1000);
        }
        
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ PC Monitoring System - Phase 1 Loading...');
            
            // Load initial errors
            loadErrors();
            
            // Load API key
            loadApiKey();
            
            // Set up event listeners
            const toggleApiKeyBtn = document.getElementById('toggleApiKeyBtn');
            if (toggleApiKeyBtn) {
                toggleApiKeyBtn.addEventListener('click', toggleApiKeyVisibility);
            }
            
            const chatInput = document.getElementById('chatInput');
            const sendMessageBtn = document.getElementById('sendMessageBtn');
            
            if (sendMessageBtn) {
                sendMessageBtn.addEventListener('click', sendMessage);
            }
            
            if (chatInput) {
                chatInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        sendMessage();
                    }
                });
            }
            
            // Auto-refresh errors every 30 seconds
            setInterval(loadErrors, 30000);
            
            console.log('‚úÖ Phase 1 API Key System initialized');
        });
        
        // API Key Management
        async function checkApiStatus() {
            const apiStatus = document.getElementById('apiStatus');
            const apiStatusText = document.getElementById('apiStatusText');
            
            try {
                const response = await fetch('/api/api-key-status');
                const data = await response.json();
                
                if (data.success) {
                    if (data.configured) {
                        apiStatus.className = 'api-status status-configured';
                        apiStatusText.innerHTML = '<i class="fas fa-check-circle"></i> API key configured and working';
                        
                        if (data.maskedKey) {
                            const maskedKeyDiv = document.createElement('div');
                            maskedKeyDiv.style.cssText = 'color: rgba(0, 255, 136, 0.6); font-size: 0.8rem; margin-top: 0.5rem;';
                            maskedKeyDiv.textContent = 'Key: ' + data.maskedKey;
                            apiStatus.appendChild(maskedKeyDiv);
                        }
                        
                        showNotification('success', 'API Key Active', 'OpenRouter API key is configured and ready');
                    } else {
                        apiStatus.className = 'api-status status-not-configured';
                        apiStatusText.innerHTML = '<i class="fas fa-exclamation-triangle"></i> API key not configured';
                        showNotification('warning', 'API Key Required', 'Please configure your OpenRouter API key');
                    }
                } else {
                    throw new Error(data.error || 'Failed to check API status');
                }
                
            } catch (error) {
                console.error('API status check failed:', error);
                apiStatus.className = 'api-status status-not-configured';
                apiStatusText.innerHTML = '<i class="fas fa-times-circle"></i> Unable to check API status';
                showNotification('error', 'Connection Error', 'Failed to check API status: ' + error.message);
            }
        }
        
        // Load saved API key on page load - CRITICAL FOR PHASE 1
        async function loadApiKey() {
            try {
                console.log('üîë Loading saved API key...');
                const response = await fetch('/api/get-api-key');
                const data = await response.json();
                
                if (data.success && data.apiKey) {
                    console.log('‚úÖ API key loaded successfully');
                    document.getElementById('apiKey').value = data.apiKey;
                    showNotification('success', 'API Key Loaded', 'Your saved API key has been restored');
                } else {
                    console.log('‚ÑπÔ∏è No saved API key found');
                    showNotification('info', 'No API Key', 'No saved API key found. Please configure one.');
                }
            } catch (error) {
                console.error('‚ùå Failed to load API key:', error);
                showNotification('error', 'Load Failed', 'Failed to load saved API key');
            }
        }
        
        async function saveApiKey() {
            const apiKey = document.getElementById('apiKey').value;
            const apiStatus = document.getElementById('apiStatus');
            const apiStatusText = document.getElementById('apiStatusText');
            
            if (!apiKey) {
                showNotification('error', 'Validation Error', 'Please enter an API key');
                return;
            }
            
            apiStatus.className = 'api-status status-configured';
            apiStatusText.innerHTML = '<span class="loading-spinner"></span> Saving API key...';
            
            try {
                const response = await fetch('/api/save-api-key', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        apiKey: apiKey
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showNotification('success', 'API Key Saved', 'Your API key has been permanently stored');
                    apiStatus.className = 'api-status status-configured';
                    apiStatusText.innerHTML = '<i class="fas fa-check-circle"></i> API key configured and saved';
                    
                    // Re-check status to update UI
                    setTimeout(checkApiStatus, 1000);
                } else {
                    showNotification('error', 'Save Failed', 'Failed to save API key: ' + data.error);
                    apiStatus.className = 'api-status status-not-configured';
                    apiStatusText.innerHTML = '<i class="fas fa-times-circle"></i> Failed to save API key';
                }
                
            } catch (error) {
                showNotification('error', 'Save Failed', 'Failed to save API key: ' + error.message);
                apiStatus.className = 'api-status status-not-configured';
                apiStatusText.innerHTML = '<i class="fas fa-times-circle"></i> Failed to save API key';
            }
        }
        
        function toggleApiKeyVisibility() {
            const apiKeyInput = document.getElementById('apiKey');
            const toggleBtn = document.getElementById('toggleApiKeyBtn');
            
            if (apiKeyInput.type === 'password') {
                apiKeyInput.type = 'text';
                toggleBtn.innerHTML = '<i class="fas fa-eye-slash"></i>';
            } else {
                apiKeyInput.type = 'password';
                toggleBtn.innerHTML = '<i class="fas fa-eye"></i>';
            }
        }
        
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ PC Monitoring System - Phase 1 Loading...');
            
            // Load API key first - CRITICAL
            loadApiKey().then(() => {
                // Check API status after loading
                checkApiStatus();
            });
            
            // Load initial errors
            loadErrors();
            
            // Set up event listeners
            const toggleApiKeyBtn = document.getElementById('toggleApiKeyBtn');
            if (toggleApiKeyBtn) {
                toggleApiKeyBtn.addEventListener('click', toggleApiKeyVisibility);
            }
            
            const chatInput = document.getElementById('chatInput');
            const sendMessageBtn = document.getElementById('sendMessageBtn');
            
            if (sendMessageBtn) {
                sendMessageBtn.addEventListener('click', sendMessage);
            }
            
            if (chatInput) {
                chatInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        sendMessage();
                    }
                });
            }
            
            // Add Enter key support for API key input
            const apiKeyInput = document.getElementById('apiKey');
            if (apiKeyInput) {
                apiKeyInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        saveApiKey();
                    }
                });
            }
            
            // Auto-refresh errors every 30 seconds
            setInterval(loadErrors, 30000);
            
            console.log('‚úÖ Phase 1 API Key System initialized');
        });
    </script>
